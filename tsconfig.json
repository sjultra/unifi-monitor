{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    // "noEmit": true,
    // "noUnusedLocals": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./build/",
    "types": ["node"],
    // "lib": ["es6"]
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  // "files": ["./src/globals.d.ts"],
  "files": ["./unifi-api.d.ts"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build", "scripts"]
}